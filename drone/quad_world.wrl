#VRML V2.0 utf8
WorldInfo { title "Drone World (Z-up)" }

Background { skyColor [ 0.6 0.8 1.0 ] }
DirectionalLight { direction -0.3 -0.5 -1 intensity 0.9 }

# --- Ground plane ---
Transform {
  translation 0 0 -0.05
  children [
    Shape {
      appearance Appearance {
        material Material { diffuseColor 0.3 0.7 0.3 specularColor 0.1 0.1 0.1 }
      }
      geometry Box { size 20 20 0.1 }
    }
  ]
}

# --- Camera (identity orientation) ---
DEF CamTransform Transform {
  translation 0 0 0
  children [
    Viewpoint {
      description "Front-follow Camera"
      fieldOfView 0.785
      orientation 0 0 1 0  # identity
    }
  ]
}


# --- Drone body ---
DEF Quad Transform {
  translation 0 0 0
  rotation 0 0 1 0
  children [
    Shape {
      appearance Appearance {
        material Material { diffuseColor 0.8 0.1 0.1 specularColor 0.6 0.6 0.6 }
      }
      geometry Box { size 0.4 0.4 0.05 }
    }

    # Propellers
    Transform { translation  0.2  0.2  0.03 children [
      Shape { appearance Appearance { material Material { diffuseColor 0.2 0.2 0.2 } }
              geometry Cylinder { height 0.02 radius 0.05 } }
    ]}
    Transform { translation -0.2  0.2  0.03 children [
      Shape { appearance Appearance { material Material { diffuseColor 0.2 0.2 0.2 } }
              geometry Cylinder { height 0.02 radius 0.05 } }
    ]}
    Transform { translation -0.2 -0.2  0.03 children [
      Shape { appearance Appearance { material Material { diffuseColor 0.2 0.2 0.2 } }
              geometry Cylinder { height 0.02 radius 0.05 } }
    ]}
    Transform { translation  0.2 -0.2  0.03 children [
      Shape { appearance Appearance { material Material { diffuseColor 0.2 0.2 0.2 } }
              geometry Cylinder { height 0.02 radius 0.05 } }
    ]}
  ]
}
